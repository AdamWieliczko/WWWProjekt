@model MVCInterProject.Models.Package

<style>
    body {
	    background-color: #7D8CC4;
    }
</style>

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Package</h4>
    <hr/>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PacName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PacName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PacCreateDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PacCreateDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PacIsOpen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PacIsOpen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PacCloseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PacCloseDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PacCity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PacCity)
        </dd>
    </dl>
    @if(Model.Shippings != null)
            {
                <table>
                @for (int i = 0; i < Model.Shippings.Count(); i++)
                {
                        <tbody>
                            <tr>
                            <th>
                                <div class="form-group">
                                        @Html.DisplayNameFor(model => model.Shippings[i].ShiId)
                                        @Html.DisplayFor(model => model.Shippings[i].ShiId)
                                </div>
                            </th>
                        </tr>
                        <tr>
                            <th>
                                <div class="form-group">
                                        @Html.DisplayNameFor(model => model.Shippings[i].ShiName)
                                        @Html.DisplayFor(model => model.Shippings[i].ShiName)
                                </div>
                            </th>
                        </tr>
                        <tr>
                            <th>
                                <div class="form-group">
                                        @Html.DisplayNameFor(model => model.Shippings[i].ShiCreateDate)
                                        @Html.DisplayFor(model => model.Shippings[i].ShiCreateDate)
                                </div>
                            </th>
                        </tr>
                        <tr>
                            <th>
                                <div class="form-group">
                                        @Html.DisplayNameFor(model => model.Shippings[i].ShiMass)
                                        @Html.DisplayFor(model => model.Shippings[i].ShiMass)
                                </div>
                            </th>
                        </tr>
                        </tbody>
                }
                </table>
            }
</div>
<div>
    <a asp-action="CreateOrEdit" asp-route-id="@Model?.PacId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
